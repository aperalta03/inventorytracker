{
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ],
  "buildCommand": "npm install --legacy-peer-deps && npm run build"
}
